{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "CC Session Manager",
  "version": "0.2.0",
  "identifier": "com.petch-x.cc-session-manager",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Code Session Manager",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
